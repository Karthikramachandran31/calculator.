import React, { useState } from "react";
import {
  Grid2,
  TextField,
  Button,
  Box,
  MenuItem,
  Typography,
} from "@mui/material";

const FormGrid = () => {
  const [formValues, setFormValues] = useState({
    firstName: "",
    lastName: "",
    email: "",
    phone: "",
    address: "",
    city: "",
    state: "",
    country: "",
  });

  const [errors, setErrors] = useState({});

  const validate = () => {
    let tempErrors = {};
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const phoneRegex = /^[0-9]{10}$/;

    tempErrors.firstName = formValues.firstName ? "" : "First name is required";
    tempErrors.lastName = formValues.lastName ? "" : "Last name is required";
    tempErrors.email = emailRegex.test(formValues.email)
      ? ""
      : "Invalid email format";
    tempErrors.phone = phoneRegex.test(formValues.phone)
      ? ""
      : "Phone number must be 10 digits";
    tempErrors.address = formValues.address ? "" : "Address is required";
    tempErrors.city = formValues.city ? "" : "City is required";
    tempErrors.state = formValues.state ? "" : "State is required";
    tempErrors.country = formValues.country ? "" : "Country is required";

    setErrors(tempErrors);
    return Object.values(tempErrors).every((x) => x === "");
  };

  const handleChange = (e) => {
    const { name, value } = e.target;
    setFormValues({
      ...formValues,
      [name]: value,
    });
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    if (validate()) {
      console.log("Form Data Submitted", formValues);
    }
  };

  return (
    <Box sx={{ padding: 3 }}>
      <Typography variant="h4" gutterBottom>
        User Details Form
      </Typography>
      <form onSubmit={handleSubmit}>
        <Grid2 container spacing={2}>
          <Grid2 item xs={12} sm={6}>
            <TextField
              label="First Name"
              name="firstName"
              fullWidth
              value={formValues.firstName}
              onChange={handleChange}
              error={!!errors.firstName}
              helperText={errors.firstName}
            />
          </Grid2>
          <Grid2 item xs={12} sm={6}>
            <TextField
              label="Last Name"
              name="lastName"
              fullWidth
              value={formValues.lastName}
              onChange={handleChange}
              error={!!errors.lastName}
              helperText={errors.lastName}
            />
          </Grid2>
          <Grid2 item xs={12}>
            <TextField
              label="Email"
              name="email"
              type="email"
              fullWidth
              value={formValues.email}
              onChange={handleChange}
              error={!!errors.email}
              helperText={errors.email}
            />
          </Grid2>
          <Grid2 item xs={12}>
            <TextField
              label="Phone Number"
              name="phone"
              type="text"
              fullWidth
              value={formValues.phone}
              onChange={handleChange}
              error={!!errors.phone}
              helperText={errors.phone}
            />
          </Grid2>
          <Grid2 item xs={12}>
            <TextField
              label="Address"
              name="address"
              fullWidth
              value={formValues.address}
              onChange={handleChange}
              error={!!errors.address}
              helperText={errors.address}
            />
          </Grid2>
          <Grid2 item xs={12} sm={4}>
            <TextField
              label="City"
              name="city"
              fullWidth
              value={formValues.city}
              onChange={handleChange}
              error={!!errors.city}
              helperText={errors.city}
            />
          </Grid2>
          <Grid2 item xs={12} sm={4}>
            <TextField
              label="State"
              name="state"
              fullWidth
              value={formValues.state}
              onChange={handleChange}
              error={!!errors.state}
              helperText={errors.state}
            />
          </Grid2>
          <Grid2 item xs={12} sm={4}>
            <TextField
              label="Country"
              name="country"
              fullWidth
              select
              value={formValues.country}
              onChange={handleChange}
              error={!!errors.country}
              helperText={errors.country}
            >
              {[ "India"].map((option) => (
                <MenuItem key={option} value={option}>
                  {option}
                </MenuItem>
              ))}
            </TextField>
          </Grid2>
          <Grid2 item xs={12}>
            <Button
              type="submit"
              variant="contained"
              color="primary"
              fullWidth
            >
              Submit
            </Button>
          </Grid2>
        </Grid2>
      </form>
    </Box>
  );
};

export default FormGrid;
